{
    "name": "google-secrets-manager-cloudflare",
    "version": "1.0.0",
    "files": [
        "build/*"
    ],
    "description": "Google Secrets Manager - Cloudflare",
    "keywords": [
        "google secrets manager",
        "cloudflare",
        "edge"
    ],
    "main": "./build/index.js",
    "scripts": {
        "start": "node src/index.ts",
        "build": "tsc",
        "test": "vitest run --hideSkippedTests",
        "coverage": "vitest run --coverage",
        "lint": "eslint . --ext .ts --fix --max-warnings=0"
    },
    "author": "Rafael Cuevas & Eusebio Trigo",
    "repository": {
        "type": "git",
        "url": "https://github.com/darkventurestudio/gcsm-cloudflare"
    },
    "license": "Apache-2.0",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "node_modules"
        ]
    },
    "devDependencies": {
        "@types/node": "18.17.9",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@vitest/coverage-v8": "^0.34.3",
        "eslint": "8.48.0",
        "ts-node": "^10.9.1",
        "tsup": "^7.2.0",
        "vitest": "^0.34.3"
    },
    "engines": {
        "node": ">=18.x",
        "npm": ">=9.x"
    }
}
